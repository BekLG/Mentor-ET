<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adimin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>

<body>
    <section class="container row">

      <!-- Approve Fields section -->

        <div class="article-privew col-lg-4 col-sm-12">
            <h1 class="header"> New Articles</h1>


            <%Articles.forEach(function(article){ %>




                <article class="blog-post-container">
                  <h2 class="blog-post-title mb-1"><%= article.title%></h2>
                  <p class="blog-post-meta"><%= article.datePublished.substring(4,15)%> by <a href="#"><%= article.author%></a></p>
        
                  <p><%= article.content.substring(0,400)+"..."%></p>
                  
                  <br>
                  <br>
                  <a class="btn btn-outline-primary rounded-pill" href="/articles/read/<%=article._id%>">Read More</a>
                  <form action="/admin/approvePost" method="post">
                    <input type="hidden" name="articleId" value="<%= article._id%>">
                    <button class="btn btn-outline-primary rounded-pill" type="submit">Approve</button>
                  </form>
                </article>

                <%})%>

        </div>
            

        <!-- Add Fields section -->

        <div class="field-add col-lg-4 col-sm-12">
            <h1 class="header">Add Field  </h1>
            <form action="/admin/addField" method="post">
                <input class="form-inline " type="text" name="name" id="" placeholder="Field name">
                <input class="form-inline " type="text" name="category" id="" placeholder="Field category">
                <button class="Add-btn " type="submit">add</button>
            </form>
            <div class="Field-lists">
                <h4 style="text-align: center;">Field list</h4>
                <ul class="list-container">

                    <% Fields.forEach(field => { %>
                        
                        <li class="item"><%= field.name %></li>
                      <% }) %>
                </ul>
            </div>

        </div>

        <!-- status bar -->

        <div class="status col-lg-4 col-sm-12">
            <h1 class="header">Status</h1>
        </div>


    </section>
</body>

</html>