<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose Article</title>
    <link rel="stylesheet" href="css/composeArticle.css">
    <link rel="stylesheet" href="/css/navBarAndFooter.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</head>

<body>
    <nav class="navBar navbar navbar-expand-lg sticky-top" style="background-color: #000;">

        <div class="container-fluid">
            <a class="navbar-brand" href="#">MentorET</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end " tabindex="-1" id="offcanvasDarkNavbar"
                aria-labelledby="offcanvasDarkNavbarLabel" style="background-color: #2E5895;">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end  flex-grow-1 pe-3">
                        <li class="nav-items ">
                            <a class="nav-links active" aria-current="page" href="/">Home</a>
                        </li>
    
                        <li class="nav-items dropdown">
                            <a class="nav-links dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Field
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <% Fields.forEach((field)=>{%>
                                <li><a class="dropdown-item" href="/articles/<%= field.name%>"><%= field.name%></a></li>
                                <% }) %>
                            </ul>
                        </li>
                        <li class="nav-items">
                            <a class="nav-links active" aria-current="page" href="/articles">Articles</a>
                        </li>
                        <li class="nav-items">
                            <a class="nav-links active" aria-current="page" href="#">About</a>
                        </li>
    
                        <% if(isLoggedIn){ %>
    
                        <li class="nav-items">
                            <a class="nav-links active" aria-current="page" href="#">My Profile</a>
    
                        </li>
                        <li class="nav-items">
                            <a class="nav-links active" aria-current="page" href="/logout">Log Out</a>
                        </li>
                        <li class="nav-items">
                            <button class="BeMentor-btn composeBtn" type="submit"><a href="/composeArticle">compose
                                    article</a></button>
                        </li>
    
                        <% } else {%>
    
                        <li class="nav-items">
                            <button class="BeMentor-btn" type="submit"><a href="/signInUp">Be a Mentor</a></button>
                        </li>
    
                        <% } %>
    
    
    
    
                    </ul>
                </div>
            </div>
    </nav>
    
    <h1 class="compose-article">Compose your article </h1>
    <div class="article-container">
        <form action="/composeArticle" method="post" class="row">
            <div class="method-selection col-lg-3 col-md-12">
                <h3>Title</h3>
                <input class="form-control" type="text" name="title" id="title" placeholder="e.g web development">

                <label for="motives">Choose Motive</label>
                <select id="motives" name="motive">
                  <option value="Experience sharing">Experience sharing</option>
                  <option value="Skill development">Skill development</option>
                  <option value="Career advice">Career advice</option>
                  <option value="Academic guidance">Academic guidance</option>
                  <option value="Research insights">Research insights</option>
                  <option value="Industry news">Industry news</option>
                  <option value="Personal growth">Personal growth</option>
                </select>

                <br>

                <div class="chackbox-container">
                    <h3>Fields</h3>

                    <% Fields.forEach(field => { %>

                        <ul>
                            <li>
                                <label for="<%=field.name%>"><%=field.name%></label>
                                <input type="checkbox" name="fields" value="<%=field.name%>" id="<%=field.name%>">
                            </li>
                        </ul>
                    <% }) %>

                   
                </div>
            </div>

            <div class="content col-lg-9 col-md-12">
                <h3>content</h3>
                <textarea id="content" name="content" rows="20" cols="3" placeholder="Web develpment is ..."></textarea>
                <button type="submit" class="ArticleComposeBtn"><strong>Compose</strong></button>
            </div>


        </form>
    </div>
    <footer class="  py-5 ">
        <div class="row">
            <div class="col-lg-6 col-sm-12 justify-content-center">
                <h5 class="footer-heading">Contact Us</h5>
                <ul class="list-unstyled  py-5 text-center ">
                    <i class="fa-brands fa-linkedin px-2 fa-2xl mb-3" style="color: #2E5895;"></i>
                    <i class="fa-brands fa-telegram px-2 fa-2xl mb-3" style="color: #2E5895;"></i>
                    <i class="fa-brands fa-facebook px-2 fa-2xl mb-3" style="color: #2E5895;"></i>
                    <i class="fa-solid fa-envelope px-2 fa-2xl mb-3" style="color:  #2E5895;"></i>

                </ul>
            </div>

            <div class="newsletter col-lg-5 col-sm-12 ">
                <form action="/subscribeEmail" method="post">
                    <h5 class="footer-heading">Subscribe to our newsletter</h5>
                    <p>Never miss a thing. Subscribe to our newsletter for all the latest updates.</p>
                    <div class="flex-sm-row w-100 gap-2">
                        <label for="newsletter1" class="visually-hidden">Email address</label>
                        <input id="newsletter1" type="text" class="Email-input" name="emailAdress"
                            placeholder="Email address">
                        <button class="subscribe-btn " type="submit">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="d-flex flex-column flex-sm-row justify-content-between my-4 border-top">
            <p>&copy; 2023 Mentor-ET, Inc. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous">
    </script>
    <script src="https://kit.fontawesome.com/e6213c5304.js" crossorigin="anonymous"></script>
    
</body>

</html>